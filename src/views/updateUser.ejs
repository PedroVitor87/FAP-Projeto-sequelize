<!-- updateUser.ejs -->
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Atualizar Usuário</title>
</head>
<body>
    <h1>Atualizar Usuário</h1>
    <form action="/usuarios/atualizar/<%= user.id %>" method="post">
        <!-- Campo para entrada de novos dados -->
        <label for="newName">Novo Nome:</label>
        <input type="text" id="newName" name="name" placeholder="Digite o novo nome"><br>

        <label for="newEmail">Novo Email:</label>
        <input type="text" id="newEmail" name="email" placeholder="Digite o novo email"><br>

        <label for="newAge">Nova Idade:</label>
        <input type="number" id="newAge" name="age" placeholder="Digite a nova idade"><br>

        <!-- Campo que exibe os dados existentes -->
        <label for="existingData">Dados Existentes:</label>
        <div id="existingData">
            Nome: <%= user.name %><br>
            Email: <%= user.email %><br>
            Idade: <%= user.age %> anos
        </div>

        <button type="submit">Atualizar</button>
    </form>
</body>
</html>
